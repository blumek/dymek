<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.blumek.dymek.thermometer.viewModels.SensorViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".thermometer.fragments.SensorFragment">

        <TextView
            android:id="@+id/sensor_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.sensor.name, default=`Sensor name`}"
            tools:text="Sensor name"
            android:textSize="30sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.sensor.temperature + ``, default=`36.6`}"
            tools:text="36.6"
            android:textSize="30sp"
            android:layout_below="@id/sensor_name_text_view"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</layout>