<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="thermometerProfiles"
            type="com.blumek.dymek.model.thermometerProfile.ThermometerProfile" />
        <variable
            name="viewModel"
            type="com.blumek.dymek.viewModel.ThermometerProfileViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp">

        <TextView
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/profile_name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@{thermometerProfiles.metadata.name}"
            tools:text="Profile name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="@string/edit"
                android:layout_gravity="center"
                android:onClick="@{(view) -> viewModel.onEditClicked(view, thermometerProfiles)}"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="@string/remove"
                android:layout_gravity="center"
                android:onClick="@{() -> viewModel.onDeleteClicked(thermometerProfiles)}"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>